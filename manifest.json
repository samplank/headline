{
  "manifest_version": 2,
  "name": "Headline",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
            "*://*.nytimes.com/*", "*://*.washingtonpost.com/*", "*://*.theatlantic.com/*", "*://*.newyorker.com/*"
      ],
      "js": ["jquery.js", "popup.js", "clickSignIn.js", "enterSignIn.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon_background.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}